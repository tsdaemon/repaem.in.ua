<!DOCTYPE html>

<html>
<head>
    @*TODO: TO AST: change all hrefs to Url.Content*@
    <link href="~/Content/themes/south-street/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/south-street/jquery.ui.tabs.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery.rating.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/fullcalendar.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/jquery.fancybox.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/avgrund.css" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    <script src="~/Scripts/jquery-2.0.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.rating-2.0.js" type="text/javascript"></script>
    <script src="~/Scripts/fullcalendar.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.fancybox.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.avgrund.js" type="text/javascript"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="page">
        <header>@if (User.Identity.IsAuthenticated) 
                { 
                    <span class="auth-label">Добро пожаловать, @User.Identity.Name!</span>
                } 
                else 
                {
                    <span class="auth-label">Добро пожаловать, гость!</span>
                    <span class="menu auth">
                        <ul>
                            <li>@Html.ActionLink("Зарегистрироваться", "Register", "Account")</li>
                            <li>|</li>
                            <li>@Html.ActionLink("Войти", "Auth", "Account")</li>
                        </ul>
                    </span>
            }
            <span class="menu second">
                <ul>
                    <li>@Html.ActionLink("Карта", "Map", "RepBase")</li>
                    <li>|</li>
                    <li>@Html.ActionLink("Список баз", "Index", "RepBase")</li>
                </ul>
            </span>
            <span class="help"><a href="@Url.Action("FAQ","Article")">Справка<img src="@Url.Content("~/Images/help.png")" /></a></span>
        </header>
        <a href="@Url.Action("Index","Home")"><img src="~/Images/pic_tx.png" id="header_image"/></a>
        <div id="main">
            @RenderBody()
            <div class="clear"></div>
        </div>
        <footer>
            <img src="~/Images/pic_footer.png" id="footer_image" />
            <div class="menu first">
                <ul>
                    <li>@Html.ActionLink("Карта", "Map")</li>
                    <li>@Html.ActionLink("FAQ", "FAQ")</li>
                    <li>@Html.ActionLink("Каталог баз", "Index", "RepBase")</li>
                    <li>@Html.ActionLink("Оставить отзыв", "Feedback")</li>
                </ul>
            </div>
            <div class="menu second">
                <ul>
                    <li>@Html.ActionLink("О нас", "AboutUs")</li>
                    <li>@Html.ActionLink("Политика цен", "Politics")</li>
                    <li>@Html.ActionLink("Пользовательское соглашение", "LicenseText")</li>
                </ul>
            </div>
            <div class="social"><img src="~/Images/social-panel.png" width="150px"/></div>
            <div class="aspnetdev"><img src="~/Images/dev6.png" /></div>
            <div class="counters"><img src="~/Images/counter_img.png" width="70px"/></div>
        </footer>
    </div>
    @if (ViewBag.Message != null)
    {
        <div id="Message" class="Message">@ViewBag.Message</div>
    }
    @RenderSection("Scripts", false)
    <script src="~/Scripts/custom.js" type="text/javascript"></script>
</body>
</html>
