@model aspdev.repaem.ViewModel.Repetition

<div class="rounded-corners @Model.Status.ToString() repetition">
	<h4>@Html.DisplayFor(m => m.Name)</h4>
	<p class="date">@Html.ExtendentDate(Model.Date)</p>
	<p class="name">@Html.DisplayFor(m => m.Time)</p>
	<div class="right">
		@if (Model.Status != aspdev.repaem.ViewModel.Status.cancelled)
		{
			<a href="#" data-id="@Model.Id" class="green button cancel-rep">Отменить</a>
		}
        @if (Model.Status == aspdev.repaem.ViewModel.Status.constant)
		{
			<a href="#" data-id="@Model.Id" data-one="true" class="green button cancel-rep">Отменить одну</a>
		}
	</div>
	@Html.HiddenFor(m => m.Id)
</div>
