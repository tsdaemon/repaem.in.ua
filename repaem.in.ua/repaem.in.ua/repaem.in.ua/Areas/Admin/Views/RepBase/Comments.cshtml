@model aspdev.repaem.ViewModel.Comments

<div class="box">
	<div class="box-head">
		<h2>@Model.RepBaseName</h2>
	</div>
	<div class="table comments">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<th>
					Оценка
				</th>
				<th>
					Отзыв
				</th>
				<th>
					Музыкант
				</th>
				<th>
					Почта
				</th>
				<th>
					Дата
				</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td class="rating">@Html.DisplayFor(itemModel => item.Rating)</td>
					<td>@Html.DisplayFor(itemModel => item.Text)</td>
					<td>@Html.DisplayFor(itemModel => item.Name)</td>
					<td>@Html.DisplayFor(itemModel => item.Email)</td>
					<td>@Html.DisplayFor(itemModel => item.Date)</td>
				</tr>
			}
		</table>
	</div>			
</div>
