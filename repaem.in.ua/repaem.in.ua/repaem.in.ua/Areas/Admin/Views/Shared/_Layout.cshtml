<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />

  <link href="~/Content/fullcalendar.css" rel="stylesheet" type="text/css"/>
	<link rel="stylesheet" type="text/css" href="~/Content/admin/style.css" />
	
	<script src="~/Scripts/jquery-2.0.2.js" type="text/javascript"></script>
	<script src="~/Scripts/jquery-ui-1.10.3.js" type="text/javascript"></script>
	<script src="~/Scripts/fullcalendar.js" type="text/javascript"></script>
	<script src="~/Scripts/custom-admin.js" type="text/javascript"></script>

	<title>@ViewBag.Title</title>
</head>
	<body>
		<!-- Header -->
			<div id="header">
				<div class="shell">
					<!-- Logo + Top Nav -->
					<div id="top">
						<h1>@Html.ActionLink("repaem.in.ua", "Index", "Home")</h1>
						<div id="top-navigation">
							Добро пожаловать, <strong>@User.Identity.Name</strong>
							<span>|</span>
							@Html.ActionLink("Помощь", "Help", "Home")
                            <span>|</span>
                            <a href="/">Назад на сайт</a>
							@if (ViewBag.HaveUnpaidBill)
							{
								<div class="unpaid-bill">@Html.ActionLink("У вас есть неоплаченные счета", "Index", "Invoice")</div>
							}
						</div>
					</div>
					<!-- End Logo + Top Nav -->
		
					<!-- Main Nav -->
					<div id="navigation">
						<ul>
							<li>@Html.MenuLink("Главная", "Index", "Home")</li>
							<li>@Html.MenuLink("Базы", "Index", "Repbase")</li>
							<li>@Html.MenuLink("Комнаты", "Index", "Room")</li>
							<li>@Html.MenuLink("Комментарии", "Index", "Comments")</li>
							<li>@Html.MenuLink("Репетиции", "Index", "Repetition")</li>
							<li>@Html.MenuLink("График", "Visual", "Repetition")</li>
							<li>@Html.MenuLink("Фото", "Index", "Photo")</li>
							<li>@Html.MenuLink("Оплата", "Index", "Invoice")</li>
						</ul>
					</div>
					<!-- End Main Nav -->
				</div>
			</div>
			<!-- End Header -->

			<!-- Container -->
			<div id="container">
				<div class="shell">
					<!-- Main -->
					<div id="main">
						<div class="cl"></div>
						<!-- Content -->
						<div id="content">
							 @RenderBody()
						</div>
						<!-- End Content -->
						<div class="cl">&nbsp;</div>			
					</div>
					<!-- Main -->
				</div>
			</div>
			<!-- End Container -->

			<!-- Footer -->
			<div id="footer">
				<div class="shell">
					<span class="left">&copy; 2013 - repaem.in.ua</span>
					<span class="right">
						Design by <a href="http://chocotemplates.com" target="_blank" title="The Sweetest CSS Templates WorldWide">Chocotemplates.com</a>
					</span>
				</div>
			</div>
			<!-- End Footer -->
	
		<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"> </script>
		<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"> </script>
		<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
	</body>
</html>

