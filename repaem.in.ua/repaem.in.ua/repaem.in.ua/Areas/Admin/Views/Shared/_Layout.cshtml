<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/themes/south-street/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/south-street/jquery.ui.tabs.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery.rating.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/fullcalendar.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/jquery.fancybox.css" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    <script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.2.custom.js" type="text/javascript"></script>
    <script src="~/Scripts/fullcalendar.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.fancybox.js" type="text/javascript"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
		<div id="page">
			<header>
				<div class="menu first">
					<ul>
						<li>@Html.ActionLink("Базы", "Index", "RepBase")</li>
						<li>@Html.ActionLink("Комнаты", "Index", "Room")</li>
						<li>@Html.ActionLink("Репетиции", "Index", "Repetition")</li>
						<li>@Html.ActionLink("Комментарии", "Index", "Comments")</li>
					</ul>
				</div>
				<div class="menu second">
					<ul>
						<li>@Html.ActionLink("Оплата", "Pay", "Home")</li>
						<li>@Html.ActionLink("Виджет для сайта", "Widget", "Home")</li>
					</ul>
				</div>
			<span class="help"><a href="@Url.Action("FAQ", "Home")">Справка<img src="@Url.Content("~/Images/help.png")" /></a></span>
			</header>
			<a href="@Url.Action("Index", "Home")"><img alt="большая картинка с микшерским пультом" src="~/Images/pic_tx.png" id="header_image"/></a>
			<div id="main">
				@RenderBody()
				<div class="clear"></div>
			</div>
			<footer>
				<img src="~/Images/pic_footer.png" id="footer_image" />
				<div class="menu first">
					<ul>
						<li>@Html.ActionLink("Базы", "Index", "RepBase")</li>
						<li>@Html.ActionLink("Комнаты", "Index", "Room")</li>
						<li>@Html.ActionLink("Репетиции", "Index", "Repetition")</li>
						<li>@Html.ActionLink("Комментарии", "Index", "Comments")</li>
					</ul>
				</div>
				<div class="menu second">
					<ul>
						<li>@Html.ActionLink("Оплата", "Pay", "Home")</li>
						<li>@Html.ActionLink("Виджет для сайта", "Widget", "Home")</li>
					</ul>
				</div>
			</footer>
		</div>
		@if (TempData.ContainsKey("Message"))
		{
			Html.RenderPartial("DisplayTemplates/Message", TempData["Message"]);
		}
		@RenderSection("Scripts", false)
		<script src="~/Scripts/custom.js" type="text/javascript"> </script>
		<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"> </script>
		<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"> </script>
	</body>
</html>
</body>
</html>
